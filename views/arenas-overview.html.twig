{% extends "layout.html.twig" %}

{% block content %}

<h2 class="text-center">Arenen Übersicht</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Stadt</th>
            <th>Gewichtsklasse</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        {% for arena in arenas %}
        <tr>
            <td>{{ arena.name }}</td>
            <td>{{ arena.city_name }}</td>
            <td>{{ arena.weight_class_name }}</td>
            <td>
                <a href="/arenas/edit/{{ arena.id }}" class="btn btn-sm btn-primary">Bearbeiten</a>
                <a href="/arenas/delete/{{ arena.id }}" class="btn btn-sm btn-danger" onclick="return confirm('Möchten Sie diese Arena wirklich löschen?')">Löschen</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="/arenas/create" class="btn btn-success">Neue Arena erstellen</a>

{% endblock %}
