{% extends "layout.html.twig" %}

{% block content %}

<h2 class="text-center">Kämpfer Übersicht</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Kämpfername</th>
            <th>Geburtsdatum</th>
            <th>Größe</th>
            <th>Gewicht</th>
            <th>Gewichtsklasse</th>
            <th>Stadt</th>
            <th>Erfahrungslevel</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        {% for fighter in fighters %}
        <tr>
            <td>{{ fighter.full_name }}</td>
            <td>{{ fighter.fighter_name }}</td>
            <td>{{ fighter.birthdate }}</td>
            <td>{{ fighter.height }} cm</td>
            <td>{{ fighter.weight }} kg</td>
            <td>{{ fighter.weight_class_name }}</td>
            <td>{{ fighter.city_name }}</td>
            <td>{{ fighter.experience_level }}</td>
            <td>
                <a href="/fighters/edit/{{ fighter.id }}" class="btn btn-sm btn-primary">Bearbeiten</a>
                <a href="/fighters/delete/{{ fighter.id }}" class="btn btn-sm btn-danger" onclick="return confirm('Möchten Sie diesen Kämpfer wirklich löschen?')">Löschen</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="/fighters/create" class="btn btn-success">Neuen Kämpfer hinzufügen</a>

{% endblock %}
